mixin logistics-crumbs(logisticsCrumbs_dataset)
  .logistics-crumbs(class=attributes.class)
    ul.logistics-crumbs__heading-list
      each item in logisticsCrumbs_dataset
        -
          const { modifier, caption, list } = item;
          const isCurrent = (modifier === 'europe');
        li.logistics-crumbs__heading-item(class=[
          `logistics-crumbs__heading-item--${modifier}`,
          isCurrent ? 'logistics-crumbs__heading-item--current' : null,
        ])
          a.logistics-crumbs__heading-link(href='#')= caption
    .logistics-crumbs__inner
      each item in logisticsCrumbs_dataset
        -
          const { modifier, caption, list } = item;
          const isCurrent = (modifier === 'europe');
        ul.logistics-crumbs__list(class=[
          `logistics-crumbs__list--${modifier}`,
          isCurrent ? 'logistics-crumbs__list--current' : null,
        ])
          each listItem in list
            li.logistics-crumbs__item
              a.logistics-crumbs__link(href='#')= listItem
