mixin clients()
  include _d_clients
  section.clients(class=attributes.class)
    +common-container().clients__container
      +common-heading().clients__heading Наши клиенты
      ul.clients__list
        each item, index in CLIENTS_LOGO_ALTS
          li.clients__item(class=`clients__item--${index + 1}`)
            +common-picture({
              altText: item,
              imageFormat: 'png',
              numerator: index + 1,
              parentClass: 'clients',
            })
