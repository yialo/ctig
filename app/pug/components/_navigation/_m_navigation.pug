mixin navigation()
  .navigation
    .navigation__certificates
      +certificates()
    ul.navigation__list
      each item in NAVIGATION_ITEMS
        - const [modifier, text] = item;
        li.navigation__item
          -
            const linkPath = NAVIGATION_EMPTY_LINKS.includes(modifier)
              ? '#'
              : `${modifier}.html`;
          a.navigation__link(
            class=(
              modifier === 'certificates'
              ? 'navigation__link--certificates'
              : null
            )
            href=(modifier === page.id ? null : linkPath)
          )= text
          if modifier in NAVIGATION_SUBLISTS
            +navigation-sublist(modifier)
