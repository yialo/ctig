mixin form-field--text(formFieldText_props)
  - const { name, legend, placeholder } = formFieldText_props;
  label.form-field.form-field--text(class=[
    attributes.class,
    `${attributes.class}--${name}`,
  ])
    span.form-field__legend= legend
    input.form-field__input(
      type='text'
      name=name
      placeholder=placeholder
      required
    )

mixin form-field--radio(formFieldRadio_props)
  - const { name, legend, value, defaultValue } = formFieldRadio_props;
  label.form-field.form-field--radio(class=[
    attributes.class,
    `${attributes.class}--${value}`,
  ])
    span.form-field__legend= legend
    input.form-field__input(
      type='radio'
      name=name
      value=value
      checked=(value === defaultValue ? 'checked' : false)
      required
    )
