mixin indices()
  -
    const INDICES_ITEMS = [
      ['15 733 000', 'тонн перевезено'],
      ['156', 'партнеров'],
      ['15', 'лет на рынке перевозок'],
      ['58', 'человек в команде'],
    ];
  section.indices(class=attributes.class)
    +basic-container().indices__container
      +basic-heading().indices__heading Показатели
      +basic-picture({
        altText: 'Контейнеры',
        areImagesNumerated: false,
        parentClass: 'indices',
      })
      dl.indices__list
        each item in INDICES_ITEMS
          - const [value, key] = item;
          dt.indices__term
            span.indices__string= key
          dd.indices__details= value
