mixin intro()
  header.intro(class=attributes.class)
    .intro__container
      p.basic-heading.intro__leadline Международная перевозка сборных грузов
      picture.intro__image-wrapper.intro__image-wrapper--square
        img.intro__image(
          src='img/intro__image--square.jpg'
          alt='Старт ракеты'
        )
      picture.intro__image-wrapper.intro__image-wrapper--rectangle
        img.intro__image(
          src='img/intro__image--rectangle.jpg'
          alt='Облака'
        )
