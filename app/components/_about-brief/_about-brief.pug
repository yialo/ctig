mixin about-brief()
  include _d_about-brief
  section.about-brief(class=attributes.class)
    .generic-container.generic-container--mainpage.about-brief__container
      h2.generic-heading.about-brief__heading О нас
      +generic-picture.blending__picture(
        src='img/about-brief__image.jpg',
        alt='Контейнеры',
      ).about-brief__image-wrapper
      .about-brief__text-content
        p.about-brief__subtitle Pабота с нами
        each paragraph in ABOUT_BRIEF_PARAGRAPHS
          p.generic-text-block.about-brief__paragraph= paragraph
        p.about-brief__endline Спасибо за доверие, Ваш #{SITE_TITLE}.
