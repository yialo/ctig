mixin about()
  include _d_about
  .about(class=attributes.class)
    +generic-container().about__container
      +generic-heading('h1').about__heading
      +generic-inner-content().about__inner
        +generic-picture(
          src='img/about__image.jpg'
          alt='Склад'
        ).about__image-wrapper
        each item in ABOUT_FEATURES_LISTS
          - const { heading, list } = item;
          .about__features-block
            h3.about__list-caption= `${heading}:`
            +generic-list(list).about__list
