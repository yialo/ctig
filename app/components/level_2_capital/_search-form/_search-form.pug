mixin search-form()
  form.search-form(
    method='GET',
    action=FORM_DEFAULT_ACTION,
    name='tracking-search',
  )
    label.search-form__inner
      span.generic-hidden-box.search-form__legend Поле ввода трек-номера
      input.generic-textfield(
        type='search',
        name='tracking-number',
        placeholder='Введите трек-номер',
        required,
      ).search-form__field
    button.search-form__button(type='submit')
      span.generic-hidden-box.search-form__button-legend Найти отправление
