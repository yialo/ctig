mixin page-header()
  .page-header
    .generic-container.page-header__container
      .page-header__logo
        +logo()
      .page-header__calls
        +calls()
      .page-header__search
        +search-form()
      .page-header__language-toggle
        +language-toggle()
      .page-header__main-menu
        +main-menu()
      .page-header__calculator-toggle
        +calculator-toggle()
    .page-header__popup
      .page-header__popup-inner
        +navigation().page-header__navigation
        +socials().page-header__socials
        +copyright().page-header__copyright
