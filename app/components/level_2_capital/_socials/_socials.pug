.socials(class=[
  'header-popup__nest',
  'header-popup__nest--socials',
])
  -
    const SOCIALS_ITEMS = [
      ['facebook', 'Facebook'],
      ['instagram', 'Instagram'],
      ['vk', 'ВКонтакте'],
    ];
  ul.socials__list
    each item, index in SOCIALS_ITEMS
      -
        const [path, text] = item;
        const number = index + 1;
      li(class=[
        'socials__item',
        `socials__item--${number}`,
        number === SOCIALS_ITEMS.length ? 'socials__item--last' : null,
      ])
        a(
          class=['socials__link', `socials__link--${path}`],
          href=`https://${path}.com/`,
        )
          span.generic-hidden-box.socials__legend= text
