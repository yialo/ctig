nav.main-menu
  -
    const MAIN_MENU_ITEMS = [
      ['index', 'Главная'],
      ['contacts', 'Контакты'],
      ['about', 'О компании'],
      ['transport', 'Транспорт'],
      ['registration', 'Таможенное оформление'],
    ];
  .main-menu__navigation-toggle
    include ../_navigation-toggle/_navigation-toggle
  ul.main-menu__list
    each item, index in MAIN_MENU_ITEMS
      -
        const [modifier, text] = item;
        const itemLink = _EMPTY_NAVIGATION_LINKS.includes(modifier)
          ? '#'
          : `${modifier}.html`;
      li(class=['main-menu__item', `main-menu__item--${index + 1}`])
        a(
          class=[
            'main-menu__link',
            modifier === 'index' ? 'main-menu__link--notext' : null,
          ],
          href=(modifier === page.id ? null : itemLink),
        )
          if modifier === 'index'
            span.main-menu__legend= text
          else
            = text
