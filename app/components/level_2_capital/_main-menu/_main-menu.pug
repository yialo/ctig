mixin main-menu()
  -
    const MAIN_MENU_ITEMS = [
      ['index', 'Главная'],
      ['contacts', 'Контакты'],
      ['about', 'О компании'],
      ['transport', 'Транспорт'],
      ['registration', 'Таможенное оформление'],
    ];
  ul.main-menu
    each item, index in MAIN_MENU_ITEMS
      - const [modifier, text] = item;
      li.main-menu__item(class=`main-menu__item--${index + 1}`)
        -
          const itemLink = _EMPTY_NAVIGATION_LINKS.includes(modifier)
            ? '#'
            : `${modifier}.html`;
        a.main-menu__link(
          href=(modifier === page.id ? null : itemLink)
          class=(modifier === 'index' ? 'main-menu__link--notext': null)
        )
          if modifier === 'index'
            span.main-menu__legend= text
          else
            = text
