mixin transport()
  -
    const TRANSPORT_ITEMS = [
      ['plane', 'Авиатранспорт'],
      ['train', 'Ж/Д перевозки'],
      ['truck', 'Автотранспорт'],
      ['ship', 'Водный транспорт'],
      ['rocket', 'Ракетный транспорт'],
    ];
  section.mixed-gallery.transport(class=attributes.class)
    .generic-container.generic-container--wide(class=[
      'mixed-gallery__container',
      'transport__container',
    ])
      h2.generic-heading-1.transport__heading Виды перевозок
      ul.mixed-gallery__list.transport__list
        each item, index in TRANSPORT_ITEMS
          - const [modifier, heading] = item;
          +transport-item({
            modifier: modifier,
            heading: heading,
            number: index + 1,
          })(class=[
            'transport__item',
            `transport__item--${index + 1}`,
            (
              index === TRANSPORT_ITEMS.length - 1
              ? 'transport__item--last'
              : null
            ),
          ])
