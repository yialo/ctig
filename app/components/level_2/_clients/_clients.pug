mixin clients()
  include _d_clients
  section.clients(class=attributes.class)
    .generic-container.generic-container--mainpage.clients__container
      h2.generic-heading.clients__heading Наши клиенты
      ul.clients__list
        each item, index in CLIENTS_LOGO_ALTS
          li.clients__item
            +generic-picture(
              class=`.clients__image-wrapper----${index + 1}`
              src=`img/clients__image--${index + 1}.png`
              alt=item
            ).clients__image-wrapper
